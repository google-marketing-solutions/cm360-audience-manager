{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "typeRoots": ["node_modules/@types", "./types/cm360"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "types/**/*.ts",
    "node_modules/@types",
    "rollup.config.mjs"
  ]
}
